extends ../layout/index
block content
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}
        .row
            include ../layout/partials/testimoniales
        
            .col-md-12
                h2.text-center Agrega un Testimonial
                if errores
                    if errores.length > 0
                        each error in errores
                            .alert.alert-danger.text-center=error.mensaje
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(type="text", placeholder="Tu Nombre", name="nombre", id="nombre", class="form-control", value=nombre)
                            .form-group
                                label(for="email") Correo Electrónico
                                input(type="email", placeholder="Tu Correo Electrónico", name="email", id="email", class="form-control", value=email)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea(name="mensaje", cols="30", rows="3", placeholder="Tu Mensaje", class="form-control") #{mensaje}
                            input.btn.btn-success.btn-block(type="submit", value="Agregar")